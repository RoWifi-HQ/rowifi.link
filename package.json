{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "build": "npm run build:css && cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "dev:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/tailwind.css --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler"
  },
  "dependencies": {
    "@docsearch/react": "^3.0.0",
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@remix-run/cloudflare-pages": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "dayjs": "^1.10.7",
    "framer-motion": "^4.1.17",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.32.1",
    "remix": "^1.2.3",
    "remix-image": "^0.3.16"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@tailwindcss/typography": "^0.5.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.31",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.0.1",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  }
}
